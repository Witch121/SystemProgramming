<Window x:Class="Lab5._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFCFDFEB">
    <Grid Margin="10" >

        <TextBox x:Name="LogTextBox" 
            HorizontalAlignment="Left" 
            Margin="0,107,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="491" 
            Foreground="#FF565353"
            IsReadOnly="True"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            FontSize="20"
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="Hi there! Choose the file and let the magic happens ;)" 
            VerticalAlignment="Top" 
            Width="481"/>
        <Button 
            Content="Select file" 
            Click="SelectFile_Click"
            FontSize="18"
            HorizontalAlignment="Left" 
            Height="28" 
            Margin="10,51,0,0" 
            VerticalAlignment="Top" 
            Width="152" 
            Background="#FF85C1F0" 
            BorderBrush="#FF1A444B"
            />
    </Grid>
</Window>
